<h1>ログイン</h1>
<%= render 'shared/error', obj: @form %>
<% unless @form.errors.any? || flash[:error].nil? %>
  <ul>
    <li class="error_message"><%= flash[:error] %></li>
  </ul>
<% end %>

<div>
  <%= form_for @form, url: :sessions do |f| %>
    <div>
      <%= f.label :user_id, 'ユーザID' %>
      <%= f.text_field :user_id %>
    </div>
    <div>
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password %>
    </div>
    <div>
      <%= f.submit 'ログインする' %>
    </div>
  <% end %>
</div>